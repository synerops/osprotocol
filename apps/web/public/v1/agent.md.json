{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/agent.md.json",
  "title": "AGENT.md Schema",
  "description": "Agent metadata (YAML frontmatter in AGENT.md)",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the agent"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "version": {
      "type": "string",
      "description": "Semantic version (optional)"
    },
    "extends": {
      "type": "string",
      "description": "Parent agent to extend from (optional)"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tools this agent has access to (e.g., 'fs.read', 'checks.rules')"
    },
    "workflows": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Workflow patterns this agent can use (e.g., 'routing', 'parallelization')"
    },
    "annotations": {
      "$ref": "#/definitions/AgentAnnotations",
      "description": "Discovery annotations"
    }
  },
  "required": [
    "name",
    "description"
  ],
  "additionalProperties": false,
  "definitions": {
    "AgentAnnotations": {
      "type": "object",
      "properties": {
        "whenToUse": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Conditions under which this agent should be used"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Example inputs/tasks this agent handles well"
        }
      },
      "required": [
        "whenToUse"
      ],
      "additionalProperties": false,
      "description": "Annotations for agent discovery and routing"
    }
  }
}
