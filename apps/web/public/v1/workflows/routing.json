{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/workflows/routing.json",
  "title": "Routing Workflow Schema",
  "description": "Configuration for a single route in a routing workflow",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "Human-readable description of this route"
    },
    "whenToUse": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Conditions under which this route should be selected"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional example inputs that match this route"
    }
  },
  "required": [
    "description",
    "whenToUse"
  ],
  "additionalProperties": false,
  "definitions": {}
}
