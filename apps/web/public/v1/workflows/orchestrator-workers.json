{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/workflows/orchestrator-workers.json",
  "title": "Orchestrator-Workers Workflow Schema",
  "description": "Execution plan generated by the orchestrator",
  "type": "object",
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PlanStep"
      },
      "description": "Ordered list of steps to execute"
    },
    "goal": {
      "type": "string",
      "description": "Overall goal of the plan"
    }
  },
  "required": [
    "steps",
    "goal"
  ],
  "additionalProperties": false,
  "definitions": {
    "PlanStep": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for this step"
        },
        "description": {
          "type": "string",
          "description": "Description of what this step accomplishes"
        },
        "worker": {
          "type": "string",
          "description": "The worker/agent to delegate this step to"
        },
        "input": {
          "type": "string",
          "description": "Input data for this step"
        },
        "dependsOn": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IDs of steps that must complete before this step"
        }
      },
      "required": [
        "id",
        "description",
        "worker",
        "input"
      ],
      "additionalProperties": false,
      "description": "A step in the execution plan"
    }
  }
}
