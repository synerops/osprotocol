{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/workflows/parallelization.json",
  "title": "Parallelization Workflow Schema",
  "description": "Configuration for parallelization workflow",
  "type": "object",
  "properties": {
    "maxConcurrency": {
      "type": "number",
      "description": "Maximum number of concurrent executions"
    },
    "failureStrategy": {
      "type": "string",
      "enum": [
        "fail-fast",
        "collect-all"
      ],
      "description": "Strategy for handling failures"
    },
    "includeFailures": {
      "type": "boolean",
      "description": "Whether to include failed results in merge"
    }
  },
  "additionalProperties": false,
  "definitions": {}
}
