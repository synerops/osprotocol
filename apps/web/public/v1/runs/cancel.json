{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/runs/cancel.json",
  "title": "Cancel Schema",
  "description": "Cancel configuration for workflow runs",
  "type": "object",
  "properties": {
    "reason": {
      "type": "string",
      "description": "Optional reason for cancellation"
    },
    "graceful": {
      "type": "boolean",
      "description": "Whether to wait for cleanup before resolving"
    },
    "gracefulTimeoutMs": {
      "type": "number",
      "description": "Timeout for graceful cancellation in milliseconds"
    }
  },
  "additionalProperties": false,
  "definitions": {}
}
