{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/runs/approval.json",
  "title": "Approval Schema",
  "description": "Configuration for approval requests",
  "type": "object",
  "properties": {
    "timeoutMs": {
      "type": "number",
      "description": "Default timeout for approval requests (milliseconds)"
    },
    "autoApproveOnTimeout": {
      "type": "boolean",
      "description": "Whether to auto-approve after timeout"
    },
    "approvers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of users who can approve"
    },
    "requiredApprovals": {
      "type": "number",
      "description": "Minimum approvals required (for multi-approval scenarios)"
    }
  },
  "additionalProperties": false,
  "definitions": {}
}
