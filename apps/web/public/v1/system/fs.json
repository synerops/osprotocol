{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/system/fs.json",
  "title": "Filesystem Entry Schema",
  "description": "A file system entry (file or directory)",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "File or directory name"
    },
    "path": {
      "type": "string",
      "description": "Full path relative to the filesystem root"
    },
    "type": {
      "type": "string",
      "enum": [
        "file",
        "directory"
      ],
      "description": "Entry type"
    },
    "size": {
      "type": "number",
      "description": "Size in bytes (files only)"
    },
    "updatedAt": {
      "type": "number",
      "description": "Last modified timestamp (Unix ms)"
    },
    "metadata": {
      "$ref": "#/definitions/Record%3Cstring%2Cunknown%3E",
      "description": "Extensible metadata for provider-specific data"
    }
  },
  "required": [
    "name",
    "path",
    "type"
  ],
  "additionalProperties": false,
  "definitions": {
    "Record<string,unknown>": {
      "type": "object",
      "additionalProperties": {}
    }
  }
}
