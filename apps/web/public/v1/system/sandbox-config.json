{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/system/sandbox-config.json",
  "title": "Sandbox Configuration Schema",
  "description": "Configuration for creating a new sandbox",
  "type": "object",
  "properties": {
    "runtime": {
      "type": "string",
      "description": "Runtime or template identifier (e.g., \"node24\", \"python3.13\")"
    },
    "timeout": {
      "type": "number",
      "description": "Initial timeout in milliseconds before auto-stop"
    },
    "env": {
      "$ref": "#/definitions/Record%3Cstring%2Cstring%3E",
      "description": "Environment variables to inject"
    },
    "ports": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Ports to expose for external access"
    },
    "metadata": {
      "$ref": "#/definitions/Record%3Cstring%2Cunknown%3E",
      "description": "Extensible metadata for provider-specific data"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "Record<string,string>": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "Record<string,unknown>": {
      "type": "object",
      "additionalProperties": {}
    }
  }
}
