{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/checks/screenshot-comparison.json",
  "title": "Screenshot Comparison Result Schema",
  "description": "Visual comparison result\n\nProduced by comparing two screenshots. Connects to the checks pattern â€” passed/message like RuleResult.",
  "type": "object",
  "properties": {
    "passed": {
      "type": "boolean",
      "description": "Whether the screenshots match within threshold"
    },
    "message": {
      "type": "string",
      "description": "Human-readable explanation"
    },
    "diffPixels": {
      "type": "number",
      "description": "Number of pixels that differ"
    },
    "diffRatio": {
      "type": "number",
      "description": "Ratio of different pixels (0-1)"
    },
    "diffImage": {
      "type": "string",
      "description": "Base64-encoded diff image showing differences"
    },
    "metadata": {
      "$ref": "#/definitions/Record%3Cstring%2Cunknown%3E",
      "description": "Extensible metadata for provider-specific data"
    }
  },
  "required": [
    "passed",
    "message",
    "diffPixels",
    "diffRatio"
  ],
  "additionalProperties": false,
  "definitions": {
    "Record<string,unknown>": {
      "type": "object",
      "additionalProperties": {}
    }
  }
}
