{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/checks/judge-config.json",
  "title": "Judge Configuration Schema",
  "description": "Judge configuration",
  "type": "object",
  "properties": {
    "model": {
      "type": "string",
      "description": "Model identifier for the judge LLM"
    },
    "criteria": {
      "type": "string",
      "description": "Evaluation criteria or rubric"
    },
    "threshold": {
      "type": "number",
      "description": "Score threshold for passing (0-1)"
    },
    "metadata": {
      "$ref": "#/definitions/Record%3Cstring%2Cunknown%3E",
      "description": "Extensible metadata for provider-specific data"
    }
  },
  "required": [
    "criteria"
  ],
  "additionalProperties": false,
  "definitions": {
    "Record<string,unknown>": {
      "type": "object",
      "additionalProperties": {}
    }
  }
}
