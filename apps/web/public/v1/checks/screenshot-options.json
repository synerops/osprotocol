{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/checks/screenshot-options.json",
  "title": "Screenshot Options Schema",
  "description": "Screenshot capture options\n\nConvergent surface across Playwright, Puppeteer, Browserbase (CDP), and ScreenshotOne.",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "description": "Target URL (required for SaaS providers, optional for browser SDKs)"
    },
    "fullPage": {
      "type": "boolean",
      "description": "Capture the full scrollable page instead of just the viewport"
    },
    "clip": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y",
        "width",
        "height"
      ],
      "additionalProperties": false,
      "description": "Clip to a specific region"
    },
    "selector": {
      "type": "string",
      "description": "CSS selector to capture a specific element"
    },
    "format": {
      "$ref": "#/definitions/ImageFormat",
      "description": "Image format"
    },
    "quality": {
      "type": "number",
      "description": "Quality (0-100). Ignored for PNG."
    },
    "scale": {
      "type": "number",
      "description": "DPI multiplier (e.g. 2 for retina)"
    },
    "omitBackground": {
      "type": "boolean",
      "description": "Transparent background (PNG/WebP only)"
    },
    "metadata": {
      "$ref": "#/definitions/Record%3Cstring%2Cunknown%3E",
      "description": "Extensible metadata for provider-specific options"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ImageFormat": {
      "type": "string",
      "enum": [
        "png",
        "jpeg",
        "webp"
      ],
      "description": "Image format for screenshots\n\nUniversal across all providers. PNG for lossless (best for diff), JPEG/WebP for smaller payloads."
    },
    "Record<string,unknown>": {
      "type": "object",
      "additionalProperties": {}
    }
  }
}
