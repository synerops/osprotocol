{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osprotocol.dev/v1/actions/tool-result.json",
  "title": "Tool Result Schema",
  "description": "Result of a tool execution (success or error)",
  "$ref": "#/definitions/ToolResult%3Cunknown%3E",
  "definitions": {
    "ToolResult<unknown>": {
      "type": "object",
      "properties": {
        "toolName": {
          "type": "string",
          "description": "The tool that was executed"
        },
        "result": {
          "description": "Execution result"
        },
        "success": {
          "type": "boolean",
          "description": "Whether execution succeeded"
        },
        "error": {
          "type": "string",
          "description": "Error message if execution failed"
        },
        "metadata": {
          "$ref": "#/definitions/Record%3Cstring%2Cunknown%3E",
          "description": "Extensible metadata for provider-specific data"
        }
      },
      "required": [
        "toolName",
        "result",
        "success"
      ],
      "additionalProperties": false,
      "description": "Tool execution result"
    },
    "Record<string,unknown>": {
      "type": "object",
      "additionalProperties": {}
    }
  }
}
